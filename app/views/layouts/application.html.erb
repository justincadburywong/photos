<!DOCTYPE html>
<html>
  <head>
    <title>Photos</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => "reload" %>
  </head>

  <body>
    <%= yield %>
    <footer>
      <% if user_signed_in? %>
      <div class="nav-item col-md-12">
        <a class="nav-link btn btn-primary btn-lg btn-block" href="<%=edit_user_registration_path%>">Settings</a>
      </div>
      <div class="nav-item col-md-12">
        <a class="nav-link btn btn-primary btn-lg btn-block" href="<%=destroy_user_session_path%>" data-method="delete">Logout</a>
      </div>
      <% else %>
        <div class="nav-item col-md-12">
          <a class="nav-link btn btn-primary btn-lg btn-block" href="<%=new_user_session_path%>">Login</a>
        </div>
      <% end %>
    </footer>
  </body>
</html>
